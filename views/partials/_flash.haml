/ Subscribe to success flash messages.
.fade.alert-dismissible{"active-class" => "in alert", "flash-alert" => "success"}
  %button.close{"data-dismiss" => "alert", :type => "button"}
    %span{"aria-hidden" => "true"} ×
    %span.sr-only Close
  %strong.alert-heading Success!
  %span.alert-message {{flash.message}}

