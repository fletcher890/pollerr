.page-header
  %h1 Authentication
.row
  .col-sm-12
    .col-sm-6
      %form.form-horizontal{:action => "/login", :method => "POST"}
        %h2 Log In
        .row.form-group
          %label.control-label.col-sm-2{:for => "username"} Username:
          .col-sm-8
            %input.form-control{:name => "username", :required => "", :type => "text"}/
        .row.form-group
          %label.control-label.col-sm-2{:for => "password"} Password:
          .col-sm-8
            %input.form-control{:name => "password", :required => "", :type => "password"}/
        .row.form-group
          .col-sm-offset-2.col-sm-10
            %button.btn.btn-primary Log In
    .col-sm-6
      %form.form-horizontal{:action => "/register", :method => "POST"}
        %h2 Sign Up
        .row.form-group
          %label.control-label.col-sm-2{:for => "email"} Email:
          .col-sm-8
            %input.form-control{:name => "user[email]", :required => "", :type => "email"}/
        .row.form-group
          %label.control-label.col-sm-2{:for => "username"} Username:
          .col-sm-8
            %input.form-control{:name => "user[username]", :required => "", :type => "text"}/
        .row.form-group
          %label.control-label.col-sm-2{:for => "password"} Password:
          .col-sm-8
            %input.form-control{:name => "password", :required => "", :type => "password"}/
        .row.form-group
          .col-sm-offset-2.col-sm-10
            %button.btn.btn-primary Sign Up